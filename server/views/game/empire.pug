extends ../layout

block head
    link(
        rel="stylesheet",
        href=(h.hashedAsset("empire.css"))
    )

block content

    main.aw-content__inner
        div#gameData(
            data-textversion=(textVersion),
            data-playerid=(user.selectedPlayer._id),
            data-gameid=(user.selectedPlayer.game._id),
            data-locale=(session.locale),
            data-area="empire",
            data-initial=(gameData)
        )
            div#gameRoot

block scripts
    script(
        src=(h.hashedAsset("empire.js")),
        defer,
        nonce=(nonce)
    )
