extends ../layout

block head
    link(rel='stylesheet', href='/public/assets/styles.css')
    link(rel='stylesheet', href='/public/assets/admin.css')

block content
    main.aw-content__inner
        header.aw-content-head
            h1.aw-content-head__title= h.__("ADMIN.INDEX.TITLE")
            nav.aw-content-head__breadcrumbs
                a.aw-content-head__breadcrumb(href="/")
                    != h.icon("home", ["home-icon"])
                a.aw-content-head__breadcrumb(href="/admin")= h.__("ADMIN.INDEX.TITLE_NAV")
        .admin-cta
            a.admin-cta__item(href="/admin/games")
                .admin-cta__item-number= games
                .admin-cta__item-desc= h.__("ADMIN.INDEX.GAMES")
            a.admin-cta__item(href="/admin/users")
                .admin-cta__item-number= users
                .admin-cta__item-desc= h.__("ADMIN.INDEX.REGUSERS")
            a.admin-cta__item(href="/admin/emails")
                .admin-cta__item-number= emailTemplates
                .admin-cta__item-desc= h.__("ADMIN.INDEX.TEMPLATES")

block scripts
    include ../webpack/admin.footer.pug
