        "webpack-merge": "^4.1.1"
    },
    "babel": {
        "env": {
            "test": {
                "plugins": [
                    "transform-es2015-modules-commonjs"
                ]
            }
        }
    },
    "browsers": [
        "last 2 versions",
        "ie >= 11",
        "safari >= 10"
    ],
    "jest": {
        "collectCoverageFrom": [
            "client/**/*.{js,jsx}"
        ],
        "testMatch": [
            "<rootDir>/client/**/__tests__/**/*.js?(x)",
            "<rootDir>/client/**/?(*.)(spec|test).js?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/internals/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/internals/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ]
    },
    "app": {
        "name": "ArkWars",
        "description": "Arkwars - a strategic turn-based game of galactic conquest."
    }
