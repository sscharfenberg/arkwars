{
    "name": "arkwars",
    "description": "Frontend and Backend for Arkwars - a strategic turn-based game of galactic conquest. NodeJS/MongoDB Backend, React Frontend.",
    "version": "0.0.1",
    "url": "https://arkwars.io",
    "author": {
        "name": "Sven Scharfenberg",
        "email": "ashaltiriak@gmail.com",
        "url": "http://sven-scharfenberg.info"
    },
    "repository": {
        "type": "git",
        "url": "https://sscharfenberg@gitlab.com/sscharfenberg/arkwars.git"
    },
    "license": "UNLICENSED",
    "engines": {
        "node": ">= 8.1.0",
        "npm": ">= 5.0.3"
    },
    "scripts": {
        "start": "node server/nodemon.js",
        "assets.prod": "node internals/scripts/assets.prod.js",
        "assets.dev": "node internals/scripts/assets.dev.js",
        "assets.cleanup": "node internals/scripts/assets.cleanup.js",
        "test.client": "node internals/scripts/test.js --env=jsdom --coverage",
        "test.client.watch": "node internals/scripts/test.js --env=jsdom --watch"
    },
    "dependencies": {
        "body-parser": "^1.17.2",
        "compression": "^1.6.2",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^1.3.2",
        "cookie-parser": "^1.4.3",
        "dotenv": "^4.0.0",
        "express": "^4.15.3",
        "express-session": "^1.15.3",
        "fs-extra": "^3.0.1",
        "moment": "^2.18.1",
        "mongoose": "^4.10.6",
        "morgan": "^1.8.2",
        "nodemon": "^1.11.0",
        "passport": "^0.3.2",
        "pug": "^2.0.0-rc.2",
        "react": "^15.6.1",
        "react-dom": "^15.6.1"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.1",
        "babel-cli": "^6.24.1",
        "babel-loader": "^7.0.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-preset-env": "^1.5.2",
        "babel-preset-react": "^6.24.1",
        "chalk": "^1.1.3",
        "compression-webpack-plugin": "^0.4.0",
        "css-loader": "^0.28.4",
        "eslint": "^3.19.0",
        "eslint-friendly-formatter": "^3.0.0",
        "eslint-loader": "^1.8.0",
        "eslint-plugin-import": "^2.3.0",
        "eslint-plugin-react": "^7.1.0",
        "extract-text-webpack-plugin": "^2.1.2",
        "html-webpack-harddisk-plugin": "^0.1.0",
        "html-webpack-plugin": "^2.28.0",
        "jest": "^20.0.4",
        "node-sass": "^4.5.3",
        "postcss-flexbugs-fixes": "^3.0.0",
        "postcss-loader": "^2.0.6",
        "sass-lint": "^1.10.2",
        "sass-loader": "^6.0.6",
        "sasslint-webpack-plugin": "^1.0.4",
        "style-loader": "^0.18.2",
        "webpack": "^2.6.1",
        "webpack-dev-server": "^2.4.5",
        "webpack-merge": "^4.1.0",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "babel": {
        "presets": [
            "react"
        ],
        "env": {
            "test": {
                "plugins": [
                    "transform-es2015-modules-commonjs"
                ]
            }
        }
    },
    "browsers": [
        "last 2 versions",
        "ie >= 11",
        "safari >= 10"
    ],
    "jest": {
        "collectCoverageFrom": [
            "client/**/*.{js,jsx}"
        ],
        "testMatch": [
            "<rootDir>/client/**/__tests__/**/*.js?(x)",
            "<rootDir>/client/**/?(*.)(spec|test).js?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ]
    },
    "app": {
        "name": "ArkWars",
        "description": "Arkwars - a strategic turn-based game of galactic conquest."
    }
}
