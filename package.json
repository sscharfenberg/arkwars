{
    "name": "arkwars",
    "description": "Frontend and Backend for Arkwars - a strategic turn-based game of galactic conquest. NodeJS/MongoDB Backend, React Frontend.",
    "version": "0.0.1",
    "url": "https://arkwars.io",
    "author": {
        "name": "Sven Scharfenberg",
        "email": "ashaltiriak@gmail.com",
        "url": "http://sven-scharfenberg.info"
    },
    "repository": {
        "type": "git",
        "url": "https://sscharfenberg@gitlab.com/sscharfenberg/arkwars.git"
    },
    "license": "UNLICENSED",
    "engines": {
        "node": ">= 8.1.0",
        "npm": ">= 5.0.3"
    },
    "scripts": {
        "start": "node server/nodemon.js",
        "build.prod": "gulp build:prod",
        "watch": "gulp watch",
        "js.dev": "node internals/scripts/js.dev.js",
        "js.prod": "node internals/scripts/js.prod.js",
        "styles.build": "gulp styles:build",
        "styles.lint": "gulp styles:lint",
        "sync.all": "gulp sync:all",
        "sync.fonts": "gulp sync:fonts",
        "sync.images": "gulp sync:images",
        "cleanup": "node internals/scripts/cleanup.js",
        "test.client": "node internals/scripts/test.js --env=jsdom --coverage",
        "test.client.watch": "node internals/scripts/test.js --env=jsdom --watch"
    },
    "dependencies": {
        "body-parser": "^1.17.2",
        "compression": "^1.6.2",
        "connect-flash": "^0.1.1",
        "connect-mongo": "^1.3.2",
        "cookie-parser": "^1.4.3",
        "dotenv": "^4.0.0",
        "express": "^4.15.3",
        "express-session": "^1.15.3",
        "fs-extra": "^3.0.1",
        "moment": "^2.18.1",
        "mongoose": "^4.10.8",
        "morgan": "^1.8.2",
        "nodemon": "^1.11.0",
        "normalize-scss": "^7.0.0",
        "passport": "^0.3.2",
        "pug": "^2.0.0-rc.2"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.1",
        "babel-cli": "^6.24.1",
        "babel-loader": "^7.1.0",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
        "babel-preset-env": "^1.5.2",
        "chalk": "^1.1.3",
        "compression-webpack-plugin": "^0.4.0",
        "cssnano": "^3.10.0",
        "eslint": "^4.1.0",
        "eslint-friendly-formatter": "^3.0.0",
        "eslint-loader": "^1.8.0",
        "eslint-plugin-import": "^2.6.0",
        "gulp": "^3.9.1",
        "gulp-cached": "^1.1.1",
        "gulp-imagemin": "^3.3.0",
        "gulp-livereload": "^3.8.1",
        "gulp-newer": "^1.3.0",
        "gulp-notify": "^3.0.0",
        "gulp-plumber": "^1.1.0",
        "gulp-postcss": "^7.0.0",
        "gulp-rename": "^1.2.2",
        "gulp-sass": "^3.1.0",
        "gulp-size": "^2.1.0",
        "gulp-sourcemaps": "^2.6.0",
        "gulp-stylelint": "^3.9.0",
        "html-webpack-harddisk-plugin": "^0.1.0",
        "html-webpack-plugin": "^2.28.0",
        "jest": "^20.0.4",
        "postcss-banner": "^3.0.0",
        "postcss-flexbugs-fixes": "^3.0.0",
        "run-sequence": "^1.2.2",
        "stylelint-order": "^0.5.0",
        "stylelint-scss": "^1.4.4",
        "stylelint-selector-no-utility": "^1.5.0",
        "webpack": "^3.0.0",
        "webpack-dev-server": "^2.5.0",
        "webpack-merge": "^4.1.0"
    },
    "babel": {
        "env": {
            "test": {
                "plugins": [
                    "transform-es2015-modules-commonjs"
                ]
            }
        }
    },
    "browsers": [
        "last 2 versions",
        "ie >= 11",
        "safari >= 10"
    ],
    "jest": {
        "collectCoverageFrom": [
            "client/**/*.{js,jsx}"
        ],
        "testMatch": [
            "<rootDir>/client/**/__tests__/**/*.js?(x)",
            "<rootDir>/client/**/?(*.)(spec|test).js?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ]
    },
    "app": {
        "name": "ArkWars",
        "description": "Arkwars - a strategic turn-based game of galactic conquest."
    }
}
